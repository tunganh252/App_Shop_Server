<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home2"
    tools:context=".Order_detail">

    <android.support.v7.widget.CardView
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="12dp"
        app:cardElevation="4dp"
        android:background="#FFF"
        app:cardCornerRadius="5dp"
        android:scrollbars="vertical"
        android:elevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="5.2dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="#258a97" />

            <View
                android:layout_width="5.2dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#258a97" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="7dp"
                android:layout_marginLeft="15dp"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:background="#10336c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/font_a"
                        android:gravity="center_vertical|start"
                        android:text="Code Bill:"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/font_a"
                        android:textColor="#37428b"
                        android:gravity="center_vertical|start"
                        android:text="#9999999"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_a"
                        android:gravity="center_vertical|start"
                        android:text="Name:"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:text="Name"
                        android:fontFamily="@font/font_a"
                        android:textAllCaps="true"
                        android:textColor="#85a632"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_a"
                        android:gravity="center_vertical|start"
                        android:text="Phone:"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:text="123456789"
                        android:textAllCaps="true"
                        android:textColor="#85a632"
                        android:textSize="16sp"
                        android:fontFamily="@font/font_a"
                        android:textStyle="italic"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_a"
                        android:gravity="center_vertical|start"
                        android:text="Total:"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/order_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:text="$ 9999"
                        android:textColor="#85a632"
                        android:textSize="16sp"
                        android:fontFamily="@font/font_a"
                        android:textStyle="italic"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_a"
                        android:gravity="center_vertical|start"
                        android:text="Comment:"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/order_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:text="Comment"
                        android:maxLines="3"
                        android:layout_marginBottom="5dp"
                        android:textColor="#85a632"
                        android:fontFamily="@font/font_a"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/font_a"
                        android:gravity="center_vertical|start"
                        android:text="Address:"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />

                    <TextView
                        android:id="@+id/order_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:text="Address"
                        android:maxLines="3"
                        android:layout_marginBottom="5dp"
                        android:textColor="#85a632"
                        android:fontFamily="@font/font_a"
                        android:textSize="16sp"
                        android:textStyle="italic"

                        />


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/order_info"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:text="Detail:"
    android:textSize="30sp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:fontFamily="@font/font_a"
    android:textColor="#FFF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</RelativeLayout>